{
	"$schema": "https://schema.tauri.app/config/2",
	"productName": "Frame",
	"version": "0.9.0",
	"identifier": "Frame",
	"build": {
		"beforeDevCommand": "node scripts/run.cjs dev",
		"devUrl": "http://localhost:1420",
		"beforeBuildCommand": "node scripts/run.cjs build",
		"frontendDist": "../build"
	},
	"app": {
		"macOSPrivateApi": true,
		"security": {
			"csp": "default-src 'self' ipc: http://ipc.localhost; media-src 'self' asset: http://asset.localhost; img-src 'self' asset: http://asset.localhost",
			"assetProtocol": {
				"enable": true,
				"scope": ["**"]
			}
		}
	},
	"bundle": {
		"active": true,
		"targets": ["nsis", "dmg", "appimage", "deb", "app"],
		"createUpdaterArtifacts": true,
		"externalBin": ["binaries/ffmpeg", "binaries/ffprobe"],
		"icon": [
			"icons/32x32.png",
			"icons/128x128.png",
			"icons/128x128@2x.png",
			"icons/icon.icns",
			"icons/icon.ico"
		]
	},
	"plugins": {
		"updater": {
			"pubkey": "dW50cnVzdGVkIGNvbW1lbnQ6IG1pbmlzaWduIHB1YmxpYyBrZXk6IDJGNDBCREVFMUUxRDJGOEIKUldTTEx4MGU3cjFBTC9TK0FNWjQrRExzTE9QRmhPdjBWKzZTMm5naCt1Rk41U1hjaTU2Zm1BdXgK",
			"endpoints": ["https://github.com/66HEX/frame/releases/latest/download/latest.json"]
		}
	}
}
