{
	"$schema": "https://schema.tauri.app/config/2",
	"productName": "Frame",
	"version": "0.1.0",
	"identifier": "Frame",
	"build": {
		"beforeDevCommand": "bun run dev",
		"devUrl": "http://localhost:1420",
		"beforeBuildCommand": "bun run build",
		"frontendDist": "../build"
	},
	"app": {
		"macOSPrivateApi": true,
		"windows": [
			{
				"title": "Frame",
				"width": 1200,
				"height": 800,
				"minHeight": 800,
				"minWidth": 1200,
				"resizable": true,
				"fullscreen": false,
				"decorations": false,
				"transparent": true
			}
		],
		"security": {
			"csp": null
		}
	},
	"bundle": {
		"active": true,
		"targets": "all",
		"externalBin": ["binaries/ffmpeg", "binaries/ffprobe"],
		"icon": [
			"icons/32x32.png",
			"icons/128x128.png",
			"icons/128x128@2x.png",
			"icons/icon.icns",
			"icons/icon.ico"
		]
	}
}
