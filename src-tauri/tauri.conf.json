{
	"$schema": "https://schema.tauri.app/config/2",
	"productName": "Frame",
	"version": "0.2.2",
	"identifier": "Frame",
	"build": {
		"beforeDevCommand": "node scripts/run.cjs dev",
		"devUrl": "http://localhost:1420",
		"beforeBuildCommand": "node scripts/run.cjs build",
		"frontendDist": "../build"
	},
	"app": {
		"macOSPrivateApi": true,
		"security": {
			"csp": null
		}
	},
	"bundle": {
		"active": true,
		"targets": ["nsis", "dmg", "appimage", "deb"],
		"externalBin": ["binaries/ffmpeg", "binaries/ffprobe"],
		"icon": [
			"icons/32x32.png",
			"icons/128x128.png",
			"icons/128x128@2x.png",
			"icons/icon.icns",
			"icons/icon.ico"
		]
	}
}
